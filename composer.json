{
    "name": "bellshade/php",
    "description": "Referensi materi dasar dan implementasi algoritma untuk developer PHP",
    "type": "project",
    "license": "MIT",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5",
        "overtrue/phplint": "^4.1"
    },
    "scripts": {
        "phpcs": "phpcs . -s --colors --standard=phpcs.xml",
        "phpcbf": "phpcbf . --standard=phpcs.xml",
        "phpunit": "phpunit tests/",
        "phplint": "phplint . --exclude=vendor --no-cache",
        "serve": "php -S localhost:8080 router.php"
    },
    "require": {
        "erusev/parsedown": "^1.7",
        "vlucas/phpdotenv": "^5.3"
    }
}
